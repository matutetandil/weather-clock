{
  "manifest_version": 3,
  "name": "Weather Clock",
  "version": "1.2.0",
  "description": "Beautiful new tab with clock, weather, and disaster alerts",
  "permissions": [
    "geolocation",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://earthquake.usgs.gov/*",
    "https://api.weather.gov/*",
    "https://api.geonet.org.nz/*",
    "https://alerts.metservice.com/*",
    "https://www.nhc.noaa.gov/*",
    "https://feeds.meteoalarm.org/*",
    "https://api.weather.gc.ca/*",
    "https://ssl.smn.gob.ar/*",
    "https://forms.smn.gob.ar/*",
    "https://apiprevmet3.inmet.gov.br/*",
    "https://archivos.meteochile.gob.cl/*",
    "https://rss.naad-adna.pelmorex.com/*",
    "https://cap-sources.s3.amazonaws.com/*",
    "https://severeweather.wmo.int/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Weather Clock"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
